# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# See: https://editorconfig.org

root = true

# Defaults for all files
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown and prose files: keep trailing spaces (for line breaks), 2-space indent
[*.{md,markdown,mdx,txt}]
trim_trailing_whitespace = false
indent_size = 2

# YAML files (workflows, configs) use 2-space indent
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON, TOML, INI use 2-space indent
[*.{json,toml,ini}]
indent_style = space
indent_size = 2

# Python: 4-space indent (PEP 8 aligned)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Git-related files
[*.git*]
end_of_line = lf

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles must use tabs
[Makefile]
indent_style = tab

# Keep generated artifacts and lockfiles normalized
[uv.lock]
end_of_line = lf
insert_final_newline = true

# Keep license and changelog simple
[LICENSE]
indent_style = space
indent_size = 2

[CHANGELOG.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
